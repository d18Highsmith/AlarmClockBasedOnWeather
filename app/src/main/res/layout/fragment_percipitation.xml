<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PercipitationFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/relative_Layout_Perc"
        android:layout_marginTop="250dp"
        >

        <EditText
            android:id="@+id/noneText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="how many mintues to delay alarm"
            android:visibility="visible" />

        <Switch
            android:id="@+id/switchRain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="69dp"
            android:layout_marginEnd="260dp"
            android:layout_marginBottom="190dp"
            android:text="Rain" />

        <Switch
            android:id="@+id/switchSnow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="280dp"
            android:layout_marginEnd="49dp"
            android:layout_marginBottom="188dp"
            android:text="Snow" />

        <Button
            android:id="@+id/button"
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="112dp"
            android:layout_marginEnd="105dp"
            android:layout_marginBottom="20dp"
            android:text="Add Alarm Condition" />

    </RelativeLayout>
</FrameLayout>