<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        android:id="@+id/relative_Layout_Temp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TempFragment"
        android:visibility="visible">


        <EditText
            android:id="@+id/noneText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="31dp"
            android:hint="Delay in Min"
            android:inputType="number"
            android:textAlignment="center"
            android:layout_marginBottom="82dp" />

        <Button
        android:id="@+id/button2"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="105dp"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="22dp"
        android:text="Add Alarm Condition" />

    <TextView
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tempEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="11dp"
        android:text="If temp is colder than below value"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/tempEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="31dp"
        android:layout_marginBottom="81dp"
        android:hint="Temp in \u2103"
        android:inputType="number"
        android:textAlignment="center" />

</RelativeLayout>

